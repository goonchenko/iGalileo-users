<!DOCTYPE html>
<html lang="cs">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport"
              content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"/>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <style>
        .btn-light {
            border-color: rgba(0,0,0,.125);
        }
        .highlight {
            border-bottom: 1px solid rgba(0,0,0,.215);
            padding-bottom: 2px;
        }
    </style>
    <body>
        {% block navbar %}
        <div class="container">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 70px;">
                        <a href="{{ path('admin_login') }}"><button type="button" class="btn btn-light">Pro administraci</button></a>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>
                        <ul class="nav navbar-nav navbar-right">
                            {% if app.user %}
                                <li><a class="nav-link" href="{{ path('list') }}"><button type="button" class="btn btn-light">View List</button></a></li>
                                <li><a class="nav-link" href="{{ path('app_logout') }}"><button type="button" class="btn btn-light">Odhlášení</button></a></li>
                            {% else %}
                                <li><a class="nav-link" href="{{ path('app_login') }}"><button type="button" class="btn btn-light">Přihlášení</button></a></li>
                                <li><a class="nav-link" href="{{ path('registration') }}"><button type="button" class="btn btn-light">Registrace</button></a></li>
                            {% endif %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block body %}
        {% endblock %}
    </body>
</html>
