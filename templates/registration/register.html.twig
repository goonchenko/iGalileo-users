{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="card bg-light mb-3 mt-5">
                    <div class="card-body">
                        <div class="card-header mb-3">Registrace do administrace</div>
                        {{ form_start(registrationForm) }}
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(registrationForm.username, { label: 'Nickname', 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="form_group">
                                <div class="col-md-12 mb-3">
                                    {{ form_row(registrationForm.plainPassword, { label: 'Heslo', 'attr': {'class': 'form-control'} }) }}
                                </div>
                            </div>
                            <div class="col-md-12 mb-3">{{ form_row(registrationForm.agreeTerms, { 'attr': {'class': 'ml-2'} }) }}</div>

                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i> Zaregistrovat
                                </button>
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
