{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="">
                    <div class="card bg-light mb-3 mt-5">
                        <div class="card-body">
                            <form class="form-horizontal" role="form" method="post">
                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        Jste přihlášeni jako <span class="highlight">{{ app.user.username }}</span>
                                        <a style="margin-left:15px;" href="{{ path('app_logout') }}">
                                            <button type="button" class="btn btn-light">Odhlášení</button>
                                        </a>
                                    </div>
                                {% endif %}

                                <div class="card-header mb-3">Prosím přihlaste se</div>
                                <div class="form-group">
                                    <label for="email" class="control-label">E-Mailová adresa</label>
                                    <input  id="inputEmail"
                                            type="email"
                                            class="form-control"
                                            name="email"
                                            value="{{ last_username }}"
                                            required
                                            autofocus/>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="control-label">Heslo</label>
                                    <input  id="inputPassword"
                                            type="password"
                                            class="form-control"
                                            name="password"
                                            required/>
                                </div>
                                <input  type="hidden"
                                        name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"/>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-btn fa-sign-in"></i> Přihlásit se
                                    </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
